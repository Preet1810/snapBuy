<% layout('layouts/boilerplate')%>
    <div class="mt-4">
        <h1 class="">Featured Products</h1>
        <h2><a href="/products/new">Create a product</a></h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for(let product of products) {%>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= product.image %> " class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/products/<%= product._id %> ">
                                    <%= product.title %>
                                </a>
                            </h5>
                            <p class="card-text">
                                <%= product.description %>
                            </p>
                            <b class="card-text">Category: <%= product.category %> </b>
                            <p class="card-text">
                                <b>
                                    <%= product.sellerName %> Group
                                </b>
                            </p>

                        </div>
                    </div>
                </div>

                <% } %>
        </div>
    </div>