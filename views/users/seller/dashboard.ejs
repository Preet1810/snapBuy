                        <h3 class="card-title">Company Profile</h3>

                    </div>
                </div>
            </div>
        </a>
        <a href="/seller/products">
            <div class="col">
                <div class="card">
                    <img src="/icons/box.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">Products</h3>
                        <p class="card-text">
                            <%= totalProducts.length %> Total Products
                        </p>
                    </div>
                </div>
            </div>
        </a>
        <a href="/seller/enquiry">
            <div class="col">
                <div class="card">
                    <img src="/icons/magnetism.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">Leads</h3>
                        <p class="card-text">5 Leads</p>
                    </div>
                </div>
            </div>
