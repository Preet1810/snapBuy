<% layout('layouts/boilerplate')%>

    <link rel="stylesheet" href="/styleSheets/sellerdashboard/dashboard.css">
    <div class="full-page">
        <ul class="nav nav-pills nav-fill mt-5">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/seller/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/seller/company">Company Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/seller/products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/seller/enquiry">Leads</a>
            </li>
        </ul>

        <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
            <a href="/seller/company">
                <div class="col">
                    <div class="card text-bg-light">
                        <img src="/icons/user.png" class="card-img-top mx-auto" alt="...">
                        <div class="card-body">
                            <h3 class="card-text">Company Profile</h3>

                        </div>
                    </div>
                </div>
            </a>
            <a href="/seller/products">
                <div class="col">
                    <div class="card text-bg-light">
                        <img src="/icons/box.png" class="card-img-top mx-auto" alt="...">
                        <div class="card-body">
                            <h3 class="card-text">Products</h3>
                            <p class="card-text">
                                <%= totalProducts.length %> Total Products
                            </p>
                        </div>
                    </div>
                </div>
            </a>
            <a href="/seller/enquiry">
                <div class="col">
                    <div class="card text-bg-light">
                        <img src="/icons/magnetism.png" class="card-img-top mx-auto" alt="...">
                        <div class="card-body">
                            <h3 class="card-text">Leads</h3>
                            <p class="card-text">
                                <%= currentSeller.enquiries.length %> Total Leads
                            </p>
                        </div>
                    </div>
                </div>
            </a>

        </div>
    </div>