<% layout('layouts/boilerplate')%>

    <link rel="stylesheet" href="/styleSheets/sellerdashboard/company.css">

    <ul class="nav nav-pills nav-fill mt-5">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/seller/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/seller/company">Company Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/seller/products">Products</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/seller/enquiry">Leads</a>
        </li>
    </ul>

    <form action="/seller/company" method="POST" class="validated-form" novalidate>
        <h3>Edit Company Profile</h3>
        <div class="mb-3">
            <label class="form-label" for="proprietorname">Proprietor Name</label>
            <input class="form-control" type="text" id="proprietorname" name="proprietorname"
                value="<%=seller.proprietorname%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="companyname">Company Name</label>
            <input class="form-control" type="text" id="companyname" name="companyname" value="<%=seller.companyname%>"
                required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="nature">Nature of Business</label>
            <input class="form-control" type="text" id="nature" name="nature" value="<%=seller.nature%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Company Logo</label>
            <input class="form-control" type="text" id="image" name="image" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="aboutcompany">About Company</label>
            <textarea class="form-control" name="aboutcompany" id="aboutcompany" cols="30" rows="3"
                required><%=seller.aboutcompany%></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="address">Address</label>
            <input class="form-control" type="text" id="address" name="address" value="<%=seller.address%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="contactnumber">Contact Number</label>
            <input class="form-control" type="text" id="contactnumber" name="contactnumber"
                value="<%=seller.contactnumber%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" value="<%=seller.email%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="email" id="username" name="username" value="<%=seller.username%>"
                required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Edit Changes</button>
    </form>